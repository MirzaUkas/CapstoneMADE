<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapstoneMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_414</item>
        <item name="colorPrimaryVariant">@color/black_414</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background Color -->
        <!--        <item name="android:background">@color/black_414</item>-->
    </style>

    <style name="Theme.CapstoneMovie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="SearchTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--        <item name="colorControlNormal">@color/disabled_button</item>-->
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/black_414</item>
        <item name="android:editTextColor">@color/black_414</item>
    </style>

</resources>